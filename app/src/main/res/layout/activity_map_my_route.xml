<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.doraesol.dorandoran.map.MapMyRouteActivity">

    <LinearLayout
        android:id="@+id/rl_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#54C242"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#54C242"
            android:orientation="horizontal">

            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/img_menu_title"
                android:id="@+id/img_title" />-->

            <TextView
                android:id="@+id/tv_mymap_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="도란도란"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#54C242"/>
            </LinearLayout>

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:layout_weight="0.9"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="녹화하기"
            android:textSize="25dp"
            android:background="#54C242"
            android:id="@+id/bt_map_recording"
            android:layout_weight="0.45"/>
            <View
                android:layout_width="0.01dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_weight="0.01"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경로저장"
            android:id="@+id/bt_map_save"
            android:textSize="25dp"
            android:background="#54C242"
            android:layout_weight="0.45"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
